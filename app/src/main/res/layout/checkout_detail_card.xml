<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    android:id="@+id/checkout_card_view"
    android:layout_margin="5dp"
    app:cardElevation="0dp"
    app:contentPadding="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout"
        android:padding="8dp">

        <ImageView
            android:id="@+id/item_image_co"
            android:src="@drawable/coffee"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/item_title_co"
            android:layout_width="211dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/item_image_co"
            android:layout_marginStart="16dp"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/delete_co"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/item_title_co"
            android:src="@drawable/ic_trash"
            android:contentDescription="@string/delete_checkout" />

        <TextView
            android:id="@+id/item_type_co"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            app:layout_goneMarginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/item_title_co"
            app:layout_constraintLeft_toRightOf="@id/item_image_co"
            android:layout_marginStart="16dp"/>

        <TextView
            android:id="@+id/item_qty"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            app:layout_goneMarginStart="16dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/item_type_co"
            app:layout_constraintLeft_toRightOf="@id/item_image_co"
            android:layout_marginStart="16dp"/>

        <TextView
            android:id="@+id/item_price_co"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            app:layout_goneMarginStart="16dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/item_qty"
            app:layout_constraintLeft_toRightOf="@id/item_image_co"
            android:layout_marginStart="16dp"
            android:textColor="@color/chocolate"
            android:textSize="16sp"/>




    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>